@model GetaSocialChannelsViewModel

@{ Layout = "~/Views/Shared/Layouts/_LeftNavigation.cshtml"; }

<h1 @Html.EditAttributes(x => x.CurrentPage.PageName)>@Model.CurrentPage.PageName</h1>
<p class="introduction" @Html.EditAttributes(x => x.CurrentPage.MetaDescription)>@Model.CurrentPage.MetaDescription</p>
<div class="row">
    <div class="span8 clearfix ">
        @if (Model.ShowYoutubeFeed)
        {
            <h3>Youtube channel feed - @Model.YoutubeFeed.Data.Count items found</h3>
            <ul>
                @foreach (var youtubeFeedItem in Model.YoutubeFeed.Data)
                {
                    <li><a href="@youtubeFeedItem.VideoUrl">@youtubeFeedItem.Title</a></li>
                }
            </ul>
        }

        @if (Model.ShowFacebookFeed)
        {
            if (Model.FacebookFeed != null && Model.FacebookFeed.Data != null)
            {
                <h3>Facebook channel feed - @Model.FacebookFeed.Data.Count items found</h3>

                foreach (var facebookFeedItem in Model.FacebookFeed.Data)
                {
                    <div>@facebookFeedItem.From.Name : @facebookFeedItem.Message</div>
                }

            }
        }

        @if (Model.ShowTwitterFeed)
        {
            <h3>Twitter channel feed - @Model.TwitterResponse.Tweets.Count tweets found</h3>
            foreach (var twitterItem in Model.TwitterResponse.Tweets)
            {
                <div>@twitterItem.Text</div>
            }
        }

        @if (Model.ShowLinkedInFeed)
        {
            <h3>LinkedIn channel feed - @Model.LinkedInResponse.Result.Values.Count items found</h3>
            foreach (var companyFeedItem in Model.LinkedInResponse.Result.Values)
            {
                <div>@companyFeedItem.UpdateContent.CompanyStatusUpdate.Share.Comment</div>
            }
        }

        @if (Model.ShowInstagramFeed)
        {
            <h3>Instagram channel feed - @Model.InstagramResponse.Data.Length items found</h3>
            foreach (var instagramFeedItem in Model.InstagramResponse.Data)
            {
                <a href="@instagramFeedItem.Link"> @instagramFeedItem.User.FullName</a>
            }
        }
        
        @if (Model.ShowInstagramByUserFeed)
        {
            <h3>Instagram by User channel feed - @Model.InstagramByUserResponse.Data.Length items found</h3>
            foreach (var instagramByUserFeedItem in Model.InstagramByUserResponse.Data)
            {
                <a href="@instagramByUserFeedItem.Link"> @instagramByUserFeedItem.User.FullName</a>
            }
        }
        @if (Model.ShowInstagramByTagFeed)
        {
            <h3>Instagram by tag channel feed - @Model.InstagramByTagResponse.Data.Length items found</h3>
            foreach (var instagramByTagFeedItem in Model.InstagramByTagResponse.Data)
            {
                <a href="@instagramByTagFeedItem.Link"> @instagramByTagFeedItem.User.FullName</a>
            }
        }

    </div>
</div>

